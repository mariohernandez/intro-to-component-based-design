<div class="news-categories">
  {%
    include '@atoms/heading/heading.twig' with {
      heading: heading
    } only
  %}
  <ul class="news-categories__list">
    {% for item in items %}
      <li class="news-categories__item">
        {%
          include '@atoms/category-icon/category-icon.twig' with {
            icon: item.icon
          } only
        %}
      </li>
    {% endfor %}
  </ul>

  {% if button %}
    <div class="news-categories__button">
      {%
        include '@atoms/button/button.twig' with {
          button: button
        } only
      %}
    </div>
  {% endif %}
</div>
